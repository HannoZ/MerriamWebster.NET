@model LoadModel

<h2>Load API response</h2>
<form asp-action="Load" class="col-4">
    <div class="form-group">
        <select class="form-control" asp-for="Api" asp-items="Model.Apis"></select>
    </div>

    <div class="form-group">
        <label asp-for="SearchTerm">Search term</label>
        <input asp-for="SearchTerm" type="text" class="form-control" min="3" />
    </div>
    <div class="form-group">
        <label asp-for="Response">Reponse JSON</label>
        <textarea asp-for="Response" class="form-control"  rows="10"></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Load</button>
</form>

<div id="results">
    <partial name="_Response" model="Model" />
</div>